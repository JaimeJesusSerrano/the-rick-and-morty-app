{
  "compilerOptions": {
    // baseUrl is optional for plugin, but some IDEs require it
    "baseUrl": "./src",
    "paths": {
      "~Api/*": ["services/api/*"],
      "~Api": ["services/api"],
      "~Assets/*": ["assets/*"],
      "~Components/*": ["components/*"],
      "~Hooks/*": ["hooks/*"],
      "~Routes*": ["routes/*", "routes"],
      "~Screens/*": ["screens/*"],
      "~Store/*": ["store/*"],
      "~Theme": ["theme"],
      "~Utils/*": ["utils/*"]
    }
  }
}
